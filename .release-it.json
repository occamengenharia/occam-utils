{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagMessage": "Version ${version}",
    "push": true,
    "pushTags": true,
    "commit": true,
    "requireCleanWorkingDir": false

  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": false,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
