{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "modulePathIgnorePatterns": ["<rootDir>/node_modules"],
  "testRegex": ".*\\.spec\\.ts$",
  "coverageDirectory": "./coverage"
}
